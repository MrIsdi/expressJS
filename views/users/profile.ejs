<!doctype html>
<html lang="en">
    <head>
        <title>Title</title>
        <!-- Required meta tags -->
        <meta charset="utf-8">
        <meta name="viewport" content="width=device-width, initial-scale=1, shrink-to-fit=no">

        <!-- Bootstrap CSS v5.0.2 -->
        <link rel="stylesheet" href="/stylesheets/style.css">
        <link href='https://unpkg.com/boxicons@2.1.1/css/boxicons.min.css' rel='stylesheet'>
        <link rel="stylesheet" href="https://cdn.jsdelivr.net/npm/bootstrap@5.0.2/dist/css/bootstrap.min.css"  integrity="sha384-EVSTQN3/azprG1Anm3QDgpJLIm9Nao0Yz1ztcQTwFspd3yD65VohhpuuCOmLASjC" crossorigin="anonymous">

    </head>
    <body>
        <% include sidebar.ejs %>
        <div class="row justify-content-center content bgBase">
            <div class="col-6">
                <p class="fs-2 text-center mt-3 text-white">Participant ORKMTZ: <br><%= data.name %></p>
                <div class="tableNeu p-3">
                    <form action="/users/update" method="post">
                        <input type="hidden" name="id" id="id" class="form-control" value="<%= data.id %> ">
                        
                        <div class="mb-3 inputLogin">
                            <label for="name" class="form-label text-white">Username</label>
                            <input type="text" name="name" id="name" class="form-control" value="<%= data.name %> ">
                        </div>
                        <div class="mb-3 inputLogin">
                            <label for="email" class="form-label text-white">Email</label>
                            <input type="email" name="email" id="email" class="form-control" value="<%= data.email %> ">
                        </div>
                        <div class="mb-3 inputLogin">
                            <label for="nim" class="form-label text-white">No.Bp</label>
                            <input type="number" name="nim" id="nim" class="form-control" value="<%= data.nim %>">
                        </div>
                        <div class="mb-3 inputLogin">
                            <label for="jurusan" class="form-label text-white">Jurusan</label>
                            <input type="text" name="jurusan" id="jurusan" class="form-control" value="<%= data.jurusan %>">
                        </div>
                        <div class="mb-3 inputLogin">
                            <label for="tLahir" class="form-label text-white">Tanggal Lahir</label>
                            <input type="date" name="tLahir" id="tLahir" class="form-control" value="<%= data.tLahir %>">
                        </div>
                        <div class="mb-3 inputLogin">
                            <label for="tmpLahir" class="form-label text-white">Tempat Lahir</label>
                            <input type="text" name="tmpLahir" id="tmpLahir" class="form-control" value="<%= data.tmpLahir %>">
                        </div>
                        <div class="mb-3 inputLogin">
                            <label for="citaCita" class="form-label text-white">Cita-cita</label>
                            <input type="text" name="citaCita" id="citaCita" class="form-control" value="<%= data.citaCita %>">
                        </div>
                        <div class="mb-3 inputLogin">
                            <label for="asal" class="form-label text-white">Asal Daerah</label>
                            <input type="text" name="asal" id="asal" class="form-control" value="<%= data.asal %>">
                        </div>
                        <div class="inputLogin">
                            <button type="submit" class="form-control btn text-white">Update</button>
                        </div>
                    </form>
                </div>
        <!-- Bootstrap JavaScript Libraries -->
        <script src="https://cdn.jsdelivr.net/npm/@popperjs/core@2.9.2/dist/umd/popper.min.js" integrity="sha384-IQsoLXl5PILFhosVNubq5LC7Qb9DXgDA9i+tQ8Zj3iwWAwPtgFTxbJ8NT4GN1R8p" crossorigin="anonymous"></script>
        <script src="https://cdn.jsdelivr.net/npm/bootstrap@5.0.2/dist/js/bootstrap.min.js" integrity="sha384-cVKIPhGWiC2Al4u+LWgxfKTRIcfu0JTxR+EQDz/bgldoEyl4H0zUF0QKbrJ0EcQF" crossorigin="anonymous"></script>
    </body>
</html>