<!doctype html>
<html lang="en">
    <head>
        <title>Title</title>
        <!-- Required meta tags -->
        <meta charset="utf-8">
        <meta name="viewport" content="width=device-width, initial-scale=1, shrink-to-fit=no">

        <!-- Bootstrap CSS v5.0.2 -->
        <link rel="stylesheet" href="/stylesheets/style.css">
        <link href='https://unpkg.com/boxicons@2.1.1/css/boxicons.min.css' rel='stylesheet'>
        <link rel="stylesheet" href="https://cdn.jsdelivr.net/npm/bootstrap@5.0.2/dist/css/bootstrap.min.css"  integrity="sha384-EVSTQN3/azprG1Anm3QDgpJLIm9Nao0Yz1ztcQTwFspd3yD65VohhpuuCOmLASjC" crossorigin="anonymous">

    </head>
    <body>
        <% include sidebar.ejs %>
        <div class="row content bgBase p-5">
            <p class="fs-4 text-white">Event:</p>
            <% if (messages.success) { %>
                <div class="alert alert-success" role="alert"><%- messages.success %></div>
            <% } %>
            
            <% if (messages.error) { %>
                <div class="alert alert-danger" role="alert"><%- messages.error %></div>
            <% } %>
                <div class="d-flex justify-content-center flex-wrap">
                    <% for( let i = 0; i < row.length; i++ ) { %>
                        <div class="card cardNeu bgBase mx-5 mb-5" style="width: 350px">
                            <div class="card-body">
                                <h4 class="text-white card-title"><%= row[i].judul %> </h4>
                                <p class="text-white card-text"><%= row[i].kategori %></p>
                            </div>
                            <ul class="list-group list-group-flush">
                                <li class="list-group-item bgBase text-white">Hari dan Tanggal :<%= row[i].hari %>, <%= row[i].tanggal %></li>
                                <li class="list-group-item bgBase text-white">Waktu : <%= row[i].waktu %></li>
                                <li class="list-group-item bgBase text-white">Lokasi : <%= row[i].lokasi %></li>
                            </ul>
                        </div>
                    <% } %>
                </div>
            
        </div>
        <!-- Bootstrap JavaScript Libraries -->
        <script src="https://cdn.jsdelivr.net/npm/@popperjs/core@2.9.2/dist/umd/popper.min.js" integrity="sha384-IQsoLXl5PILFhosVNubq5LC7Qb9DXgDA9i+tQ8Zj3iwWAwPtgFTxbJ8NT4GN1R8p" crossorigin="anonymous"></script>
        <script src="https://cdn.jsdelivr.net/npm/bootstrap@5.0.2/dist/js/bootstrap.min.js" integrity="sha384-cVKIPhGWiC2Al4u+LWgxfKTRIcfu0JTxR+EQDz/bgldoEyl4H0zUF0QKbrJ0EcQF" crossorigin="anonymous"></script>
    </body>
</html>