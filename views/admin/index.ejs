<!DOCTYPE html>
<html>
    <head>
        <title><%= title %></title>
        <link rel="stylesheet" href="stylesheets/style.css">
        <link href='https://unpkg.com/boxicons@2.1.1/css/boxicons.min.css' rel='stylesheet'>
        <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.1.3/dist/css/bootstrap.min.css" rel="stylesheet" integrity="sha384-1BmE4kWBq78iYhFldvKuhfTAU6auU8tT94WrHftjDbrCEXSU1oBoqyl2QvZ6jIW3" crossorigin="anonymous">
    </head>
    <body>
        <% include sidebar.ejs %> 
        <div class="row justify-content-center content bgBase">
            <div class="col">
                <p class="fs-2 text-center mt-3 text-white">List of participant ORKMTZ</p>
                <% if (messages.success) { %>
                    <div class="alert alert-success" role="alert"><%- messages.success %></div>
                <% } %>
                
                <% if (messages.error) { %>
                    <div class="alert alert-danger" role="alert"><%- messages.error %></div>
                <% } %>
                <div class="d-flex flex-wrap justify-content-evenly">
                    <% for( let i = 0; i < data.length; i++ ) { %>
                        <div class="card mb-3 bgBase cardNeu" style="width: 300px;">
                            <img class="card-img-top" alt="">
                            <div class="card-body">
                                <h5 class="card-title text-white"><%= data[i].name %> </h4>
                                <p class="card-text text-white"><%= data[i].nim %> </p>
                                <p class="card-text text-white"><%= data[i].email %> </p>
                                <hr>
                                <div class="btn-group" role="group" aria-label="">
                                    <a href="../admin/resetPassword/<%= data[i].id %> " class="btn btn-info text-white">Reset Password</a>
                                    <a href="../admin/userView/<%= data[i].id %> " class="btn btn-warning text-white">View</a>
                                    <a href="../admin/delete/<%= data[i].id %> " class="btn btn-danger text-white">Delete</a>
                                </div>
                            </div>
                        </div>
                    <% } %>
                </div>
            </div>
        </div>
        <script src="/public/javascripts/script.js"></script>
        <script src="https://cdn.jsdelivr.net/npm/bootstrap@5.1.3/dist/js/bootstrap.bundle.min.js" integrity="sha384-ka7Sk0Gln4gmtz2MlQnikT1wXgYsOg+OMhuP+IlRH9sENBO0LRn5q+8nbTov4+1p" crossorigin="anonymous"></script>
    </body>
</html>
