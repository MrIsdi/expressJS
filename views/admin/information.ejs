<!doctype html>
<html lang="en">
    <head>
        <title>List of Information</title>
        <!-- Required meta tags -->
        <meta charset="utf-8">
        <meta name="viewport" content="width=device-width, initial-scale=1, shrink-to-fit=no">

        <!-- Bootstrap CSS v5.0.2 -->
        <link rel="stylesheet" href="https://cdn.jsdelivr.net/npm/bootstrap@5.0.2/dist/css/bootstrap.min.css"  integrity="sha384-EVSTQN3/azprG1Anm3QDgpJLIm9Nao0Yz1ztcQTwFspd3yD65VohhpuuCOmLASjC" crossorigin="anonymous">
        <link rel="stylesheet" href="/stylesheets/style.css">
        <link href='https://unpkg.com/boxicons@2.1.1/css/boxicons.min.css' rel='stylesheet'>
    </head>
    <body>
        
        <% include sidebar.ejs %> 

        <div class="row content bgBase hvh">
            <div class="col p-5">
                <p class="fs-4 text-white">List of Information</p>
                <div class="table-responsive">
                    <table class="table text-white">
                        <thead>
                            <tr>
                                <th>No</th>
                                <th>Title</th>
                                <th>Category</th>
                                <th>Day</th>
                                <th>Date</th>
                                <th>Time</th>
                                <th>Location</th>
                                <th>Action</th>
                            </tr>
                        </thead>
                        <tbody>
                            <% for( let i = 0; i < data.length; i++ ) { %>
                            <tr>
                                <td><%= i+1 %> </td>
                                <td><%= data[i].judul %> </td>
                                <td><%= data[i].kategori %> </td>
                                <td><%= data[i].hari %> </td>
                                <td><%= data[i].tanggal %></td>
                                <td><%= data[i].waktu %> </td>
                                <td><%= data[i].lokasi %> </td>
                                <td>
                                    <div class="btn-group" role="group" aria-label="">
                                        <a href="../admin/updateInformation/<%= data[i].id %> " class="btn btn-success text-white">Update</a>
                                        <a href="../admin/deleteInformation/<%= data[i].id %> " class="btn btn-danger text-white">Delete</a>
                                    </div>
                                </td>
                            </tr>
                            <% } %>
                        </tbody>
                    </table>
                </div>
            </div>
        </div>

        <!-- Bootstrap JavaScript Libraries -->
        <script src="https://cdn.jsdelivr.net/npm/@popperjs/core@2.9.2/dist/umd/popper.min.js" integrity="sha384-IQsoLXl5PILFhosVNubq5LC7Qb9DXgDA9i+tQ8Zj3iwWAwPtgFTxbJ8NT4GN1R8p" crossorigin="anonymous"></script>
        <script src="https://cdn.jsdelivr.net/npm/bootstrap@5.0.2/dist/js/bootstrap.min.js" integrity="sha384-cVKIPhGWiC2Al4u+LWgxfKTRIcfu0JTxR+EQDz/bgldoEyl4H0zUF0QKbrJ0EcQF" crossorigin="anonymous"></script>
    </body>
</html>